<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvVerification"
        android:text="Verification"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/layout_margin_40dp"
        android:textSize="@dimen/layout_margin_40sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_134dp"
        android:src="@drawable/otp"
        android:id="@+id/ivOtp"
        android:layout_marginTop="@dimen/layout_margin_10dp"

        />

    <TextView
        android:id="@+id/tvTextcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/layout_margin_20sp"
        android:padding="@dimen/layout_margin_20dp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/layout_margin_15dp"
        android:text="Enter the verification code we just sent you on your Email."

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEnterotp"
        android:text="@string/enter_otp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/layout_margin_20sp"
        android:layout_marginTop="@dimen/layout_margin_20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/layout_margin_60dp"
        android:layout_marginRight="@dimen/layout_margin_60dp"
        android:layout_marginTop="@dimen/layout_margin_25dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOtp1"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"
                android:digits="0123456789"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOtp2"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"
                android:digits="0123456789"
                android:paddingLeft="@dimen/layout_margin_30dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOtp3"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"
                android:digits="0123456789"
                android:paddingLeft="@dimen/layout_margin_30dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOtp4"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"
                android:digits="0123456789"
                android:paddingLeft="@dimen/layout_margin_30dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_margin_60dp"
        android:layout_gravity="center"
        app:cornerRadius="@dimen/margin_10dp"
        android:text="Verify"
        android:textSize="@dimen/layout_margin_20sp"
        android:id="@+id/btnVerify"
        android:layout_marginTop="@dimen/layout_margin_30dp"
        />


</LinearLayout>